extends ../node_modules/jade-bootstrap/_bootstrap

append styles
    link(rel='stylesheet', href='/stylesheets/customStyle.css')
head
    title=title
block body
    +img-responsive ("images/logo.jpg", "Logo")
    .container
        +navbar("","dropdown_menu","inverse")
            +nav_item("/") Home
            +nav_item("/browse") Browse
            +nav_item("/search", "active") Search
            +nav_item("/contribute") Contribute
            +nav_item("/XQuery") XQuery
    .container2
        h1 Search
        p Explore the Colenso Collection below.
        hr
        label Enter a Query:
            form(class="form-inline" action="/search", method="get")
                +input("text", "search", "E.g.Colenso AND William", "", name="searchString")
                span &nbsp &nbsp
                label(class="btn btn-success") Search
                    input(type = 'submit' style = "display:none;")
                br
                br
        each val in results
            p: a(href = "/file?filename=/" + val) !{val}
    footer.footer
        p.text-muted  Copyright &copy Colenso Project 2016

